{
  "ConnectionStrings": {
    "TalentManagementDbConn": "Server=(LocalDB)\\MSSQLLocalDB;Database=SaxTalentManagement;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=SaxTalentManagement;Integrated Security=True",
          "tableName": "ApplicationLogs",
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
