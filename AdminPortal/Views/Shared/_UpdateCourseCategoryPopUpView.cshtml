@model CourseCategoryVM

<div class="modal fade" id="UpdateCourseCategoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Course Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Courses" asp-action="UpdateCourseCategory">
                    <input asp-for="Id" type="hidden" />
                    <div class="mb-3">
                        <label style="color:black" class="col-form-label">
                            <strong>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </strong>
                        </label>
                        <input asp-for="CategoryName" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" onclick="UpdateCourseCategory()" class="btn btn-primary">Update Course Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>