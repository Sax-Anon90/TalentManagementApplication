@model SetUpPasswordViewModel

<br />
<br />
<div class="card text-dark mb-3">
    <div class="card-header bg-dark">
        <h2 style="color:white">Set up password</h2>
    </div>
    <br />
    <div class="card-body">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form asp-controller="Authentication" asp-action="SetUpPasswordForUser">
                <input asp-for="Email" type="hidden" />
                <input asp-for="employeeNo" type="hidden" />
                <div class="form-outline mb-4">
                    <label style="color:black" class="form-label">
                        @Html.DisplayNameFor(model => model.password)
                    </label>
                    <input asp-for="password" class="form-control" />
                </div>
                <div class="form-outline mb-4">
                    <label style="color:black" class="form-label">
                        @Html.DisplayNameFor(model => model.passwordReEntered)
                    </label>
                    <input asp-for="passwordReEntered" class="form-control" />
                </div>
                <button type="submit" onclick="Register()" class="btn btn-success form-control">Register</button>
            </form>
        </div>
    </div>
</div>
<br />
@if (TempData["SetUpPasswordForUserFail"] != null)
{
    <div class="alert alert-danger">
        @TempData["SetUpPasswordForUserFail"]
    </div>
}
<br/>
<div class="card border border-dark p-1">
    <a asp-controller="Authentication" asp-action="RegistrationView" class="btn btn-info btn-block mb-1">
        <i class="fa fa-users"></i> Back to Registration Page
    </a>
</div>