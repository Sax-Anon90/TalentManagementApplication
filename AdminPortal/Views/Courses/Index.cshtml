@model CoursesAndCourseCategoriesVM

<div class="card border border-dark p-1">
    <div class="card-header bg-success" style="color:white"><h3>Course Management <i class="fa fa-graduation-cap"></i></h3></div>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-User-tab" data-bs-toggle="tab" data-bs-target="#nav-User" type="button" role="tab" aria-controls="nav-User" aria-selected="true"><strong>Courses Management</strong></button>
            <button class="nav-link" id="nav-Role-tab" data-bs-toggle="tab" data-bs-target="#nav-Role" type="button" role="tab" aria-controls="nav-Role" aria-selected="false"><strong>Course Categories Management</strong></button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-User" role="tabpanel" aria-labelledby="nav-User-tab">
            <br />
            <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModalCenter" class="btn btn-success" style="float:left;margin-left:10px;">
                <i class="fa fa-plus"></i> Add Course
            </button>
            <br/>
            <br/>
            <br/>
            <table class="table table-striped table-responsive" style="width:100%">
                <thead style="background-color:#333130;">
                    <tr>
                        <th style="color:white;">Course Name</th>
                        <th style="color:white;">Course Category</th>
                        <th style="color:white;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var course in Model.CoursesViewModel)
                    {
                        <tr>
                            <td>@course.CourseName</td>
                            <td>@course.CourseCategory.CategoryName</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="nav-Role" role="tabpanel" aria-labelledby="nav-Role-tab">
        </div>
    </div>
</div>

